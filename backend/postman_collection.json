{
  "info": {
    "name": "Legal Platform API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"email\": \"user@example.com\",\n    \"password\": \"Password123\",\n    \"name\": \"John Doe\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/auth/register/user",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "register", "user"]
            }
          }
        },
        {
          "name": "Register Professional",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"email\": \"lawyer@example.com\",\n    \"password\": \"Password123\",\n    \"name\": \"Jane Smith\",\n    \"typeId\": \"{{professional_type_id}}\",\n    \"experience\": 5,\n    \"hourlyRate\": 100,\n    \"education\": \"Law Degree\",\n    \"certifications\": \"Bar Association\",\n    \"languages\": [\"English\", \"Russian\"],\n    \"specializations\": [\"Criminal Law\", \"Family Law\"],\n    \"about\": \"Experienced lawyer with 5 years of practice\",\n    \"location\": \"New York\",\n    \"workingHours\": {\n        \"monday\": { \"start\": \"09:00\", \"end\": \"18:00\" },\n        \"tuesday\": { \"start\": \"09:00\", \"end\": \"18:00\" },\n        \"wednesday\": { \"start\": \"09:00\", \"end\": \"18:00\" },\n        \"thursday\": { \"start\": \"09:00\", \"end\": \"18:00\" },\n        \"friday\": { \"start\": \"09:00\", \"end\": \"18:00\" }\n    },\n    \"contactPhone\": \"+1234567890\",\n    \"website\": \"https://example.com\",\n    \"socialLinks\": {\n        \"linkedin\": \"https://linkedin.com/in/janesmith\"\n    }\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/auth/register/professional",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "register", "professional"]
            }
          }
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"email\": \"user@example.com\",\n    \"password\": \"Password123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/auth/login",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "login"]
            }
          }
        },
        {
          "name": "Get Current User",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/auth/me",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "me"]
            }
          }
        }
      ]
    },
    {
      "name": "Professionals",
      "item": [
        {
          "name": "Get All Professionals",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/api/professionals?page=1&limit=10&type={{professional_type_id}}&minRating=4&maxHourlyRate=200&isAvailable=true&search=lawyer",
              "host": ["{{base_url}}"],
              "path": ["api", "professionals"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "10"
                },
                {
                  "key": "type",
                  "value": "{{professional_type_id}}"
                },
                {
                  "key": "minRating",
                  "value": "4"
                },
                {
                  "key": "maxHourlyRate",
                  "value": "200"
                },
                {
                  "key": "isAvailable",
                  "value": "true"
                },
                {
                  "key": "search",
                  "value": "lawyer"
                }
              ]
            }
          }
        },
        {
          "name": "Get Professional by ID",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/api/professionals/{{professional_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "professionals", "{{professional_id}}"]
            }
          }
        },
        {
          "name": "Update Professional Profile",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"typeId\": \"{{professional_type_id}}\",\n    \"experience\": 6,\n    \"hourlyRate\": 120,\n    \"isAvailable\": true,\n    \"education\": \"Updated Law Degree\",\n    \"certifications\": \"Updated Bar Association\",\n    \"languages\": [\"English\", \"Russian\", \"Spanish\"],\n    \"specializations\": [\"Criminal Law\", \"Family Law\", \"Corporate Law\"],\n    \"about\": \"Updated experience description\",\n    \"location\": \"Los Angeles\",\n    \"workingHours\": {\n        \"monday\": { \"start\": \"10:00\", \"end\": \"19:00\" },\n        \"tuesday\": { \"start\": \"10:00\", \"end\": \"19:00\" },\n        \"wednesday\": { \"start\": \"10:00\", \"end\": \"19:00\" },\n        \"thursday\": { \"start\": \"10:00\", \"end\": \"19:00\" },\n        \"friday\": { \"start\": \"10:00\", \"end\": \"19:00\" }\n    },\n    \"contactPhone\": \"+1987654321\",\n    \"website\": \"https://updated-example.com\",\n    \"socialLinks\": {\n        \"linkedin\": \"https://linkedin.com/in/janesmith\",\n        \"twitter\": \"https://twitter.com/janesmith\"\n    }\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/professionals/profile",
              "host": ["{{base_url}}"],
              "path": ["api", "professionals", "profile"]
            }
          }
        },
        {
          "name": "Delete Professional Profile",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/professionals/profile",
              "host": ["{{base_url}}"],
              "path": ["api", "professionals", "profile"]
            }
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:3000"
    },
    {
      "key": "auth_token",
      "value": "your_jwt_token_here"
    },
    {
      "key": "professional_id",
      "value": "professional_uuid_here"
    },
    {
      "key": "professional_type_id",
      "value": "professional_type_uuid_here"
    }
  ]
} 